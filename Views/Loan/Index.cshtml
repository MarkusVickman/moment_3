@model IEnumerable<Loan.Models.LoanModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Utlånade böcker</h1>

<p>
    <a asp-action="Create">Låna ut</a>
</p>
<!-- Lagt till sökfällt till tabellen -->
<br>
<input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Sök...">
<br>
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Läs mer</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Lämna in</a>
            </td>
        </tr>
}
    </tbody>
</table>
